    <script type="text/javascript">
    $(function () {

      var chart_top;
      var chart_region;

      $(document).ready(function() {
        chart_top = new Highcharts.Chart({
          chart: {
            renderTo: 'container_top',
            type: 'line',
            width: 940,
            height: 550
          },
          title: {
            text: ''
          },
          subtitle: {
            text: ''
          },
          xAxis: {
            categories: ['7시', '9시', '11시', '12시', '13시', '14시', '15시', '16시', '17시', '18시(최종)']
          },
          yAxis: {
            title: {
              text: '투표율'
            },
            plotLines: [{
              value: 0,
              width: 1,
              color: '#808080'
            }]
          },
          tooltip: {
            formatter: function() {
                return '<b>'+ this.series.name +'</b><br/>'+
                this.x +': '+ this.y +'%';
            }
          },
          plotOptions: {
            line: {
              dataLabels: {
                enabled: true
              },
              enableMouseTracking: false
            }
          },

          legend: {
            layout: 'vertical',
            align: 'right',
            verticalAlign: 'top',
            x: -10,
            y: 100,
            borderWidth: 0
          },
          series: [{
            name: '19대 총선',
            data: <%=Turnout.where(:index=>19, :province_id=>0).order(:time).map{|x| (x.rate*10000).round/100.0}.inspect%>
          }, {
            name: '18대 총선',
            data: <%=Turnout.where(:index=>18, :province_id=>0).order(:time).map{|x| (x.rate*10000).round/100.0}.inspect%>
          }, {
            name: '17대 총선',
            data: <%=Turnout.where(:index=>17, :province_id=>0).order(:time).map{|x| (x.rate*10000).round/100.0}.inspect%>
          }]
        });
      });
        
<% Province.all.each do |p| %>
      chart_region = new Highcharts.Chart({
        chart: {
          renderTo: 'container_<%=p.id%>',
          type: 'bar',
          width: 940

        },
        title: {
          text: ''
        },
        subtitle: {
          text: ''
        },
        xAxis: {
          categories: <%=raw p.regions.map{|x| x.name+" "}.inspect%>,
          title: {
            text: null
          }
        },
        yAxis: {
          min: 0,
          title: {
            text: '투표율',
            align: 'high'
          }
        },
        tooltip: {
          formatter: function() {
            return ''+
              this.series.name +': '+ this.y +'%';
          }
        },
        plotOptions: {
          bar: {
            dataLabels: {
              enabled: true
            }
          }
        },
        legend: {
          layout: 'vertical',
          align: 'right',
          verticalAlign: 'top',
          x: -100,
          y: 100,
          floating: true,
          borderWidth: 1,
          backgroundColor: '#FFFFFF',
          shadow: true
        },
        credits: {
          enabled: false
        },
          series: [{
          name: '19대 총선',
          data: <%=Turnout.where(:index=>19, :province_id=>p.id, :time=>@time).where("region_id>0").order(:region_id).map{|x| (x.rate*10000).round/100.0}.inspect%>
        }, {
          name: '18대 총선',
          data: <%=Turnout.where(:index=>18, :province_id=>p.id, :time=>@time).where("region_id>0").order(:region_id).map{|x| (x.rate*10000).round/100.0}.inspect%>
        }, {
          name: '17대 총선',
          data: <%=Turnout.where(:index=>17, :province_id=>p.id, :time=>@time).where("region_id>0").order(:region_id).map{|x| (x.rate*10000).round/100.0}.inspect%>
        }]
      });
<% end %>

    });
    </script>
    <link rel="stylesheet" href="http://twitter.github.com/bootstrap/1.3.0/bootstrap.min.css">
    <style>
      h1, h2 {
        color: white;
      }
      body {
        background: url(<%=asset_path 'bg.jpg'%>) repeat fixed;
        font-family: 나눔고딕;
      }
      #global_container {
        padding-top: 60px;
      }
      section {
        margin: 60px 0px;
      }
      table {
        background: white;
      }
    </style>
  </head>
  <body>

