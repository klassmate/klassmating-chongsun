    <script type="text/javascript">
    $(function () {

      var chart_top;
      var chart_region;

      $(document).ready(function() {
        chart_top = new Highcharts.Chart({
          chart: {
            renderTo: 'container_top',
            type: 'line',
            width: 940,
            height: 550
          },
          title: {
            text: ''
          },
          subtitle: {
            text: ''
          },
          xAxis: {
            categories: ['7시', '9시', '11시', '12시', '13시', '14시', '15시', '16시', '17시', '18시(최종)']
          },
          yAxis: {
            title: {
              text: '득표율'
            },
            plotLines: [{
              value: 0,
              width: 1,
              color: '#808080'
            }]
          },
          tooltip: {
            formatter: function() {
                return '<b>'+ this.series.name +'</b><br/>'+
                this.x +': '+ this.y +'%';
            }
          },

          legend: {
            layout: 'vertical',
            align: 'right',
            verticalAlign: 'top',
            x: -10,
            y: 100,
            borderWidth: 0
          },
          series: [{
            name: '19대 총선',
            data: <%=@turnout19.map{|x| (x.rate*10000).round/100.0}.inspect%>
          }, {
            name: '18대 총선',
            data: <%=@turnout18.map{|x| (x.rate*10000).round/100.0}.inspect%>
          }, {
            name: '17대 총선',
            data: <%=@turnout17.map{|x| (x.rate*10000).round/100.0}.inspect%>
          }]
        });
      });

      $("#region").change(function() {
        location.href = $("#region").val();
      });
    });
    </script>
    <link rel="stylesheet" href="http://twitter.github.com/bootstrap/1.3.0/bootstrap.min.css">
    <style>
      h1, h2 {
        color: white;
      }
      body {
        background: url(<%=asset_path 'bg.jpg'%>) repeat fixed;
        font-family: 나눔고딕;
      }
      #global_container {
        padding-top: 60px;
      }
      #navigation {
        height: 30px;
        margin-bottom: 10px;
      }
      #navigation span {
        color: white;
        margin-right: 20px;
      }
      section {
        margin: 60px 0px;
      }
      table {
        background: white;
      }
      img.profile_image {
        width: 100px;
      }
      table .number {
        width: 10%;
      }
      table .photo {
        width: 20%;
      }
      table .party {
        width: 20%;
      }
      table .name {
        width: 20%;
      }
      table .vote {
        width: 30%;
      }
    </style>
